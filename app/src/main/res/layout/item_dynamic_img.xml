<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dynamic_img"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dynamic_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chat_play_icon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/dynamic_img"
        app:layout_constraintEnd_toEndOf="@id/dynamic_img"
        app:layout_constraintStart_toStartOf="@id/dynamic_img"
        app:layout_constraintTop_toTopOf="@id/dynamic_img" />

</androidx.constraintlayout.widget.ConstraintLayout>