<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiuyue.user.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_product_avatar"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:src="@color/colorEee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="套餐名称"
        android:textColor="@color/color333"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_product_rating"
        app:layout_constraintStart_toEndOf="@id/iv_product_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_product_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="服务评分"
        android:textColor="@color/color333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_product_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_product_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <com.jiuyue.user.widget.MarkView
        android:id="@+id/mv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_rating"
        app:layout_constraintStart_toEndOf="@+id/tv_product_rating"
        app:layout_constraintTop_toTopOf="@+id/tv_product_rating" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/shape_fbfbfb_5dp"
        android:paddingStart="11dp"
        android:paddingTop="17dp"
        android:paddingEnd="11dp"
        android:paddingBottom="17dp"
        app:layout_constraintTop_toBottomOf="@id/iv_product_avatar">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你想说"
            android:textColor="@color/color333"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color333"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/rv_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/login_shape"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cl_rating" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_anonymous"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:button="@drawable/selector_check_main"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="匿名评价"
        android:textColor="@color/colorBbb"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_confirm" />


</androidx.constraintlayout.widget.ConstraintLayout>