<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiuyue.user.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jiuyue.user.widget.ScrollRefreshLayout
        android:id="@+id/srl_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/cl_pay"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@color/colorFe"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pay_last_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="支付剩余时间 00:00"
                        android:textColor="@color/color999"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pay_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:text="¥"
                        android:textColor="@color/color333"
                        android:textSize="20sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_pay_amount"
                        app:layout_constraintEnd_toStartOf="@+id/tv_pay_amount"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pay_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:layout_marginBottom="26dp"
                        android:text="0.00"
                        android:textColor="@color/color333"
                        android:textSize="29sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_pay_rmb"
                        app:layout_constraintTop_toBottomOf="@+id/tv_pay_last_time" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pay_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@color/colorFe"
                    android:paddingStart="19dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="19dp"
                    android:paddingBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cl_pay_info">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号："
                        android:textColor="@color/color333"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_product_avatar"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="17dp"
                        android:src="@color/colorEee"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_order_no" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="套餐名称"
                        android:textColor="@color/color333"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_product_duration"
                        app:layout_constraintStart_toEndOf="@id/iv_product_avatar"
                        app:layout_constraintTop_toTopOf="@id/iv_product_avatar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_product_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="时长："
                        android:textColor="@color/color999"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@id/tv_product_technician"
                        app:layout_constraintStart_toEndOf="@id/iv_product_avatar"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_product_technician"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="服务技师："
                        android:textColor="@color/color999"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_product_avatar"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_duration" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@color/colorFe"
                    app:layout_constraintTop_toBottomOf="@id/cl_pay_order">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="20dp"
                        android:text="支付方式"
                        android:textColor="@color/color333"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="19dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="19dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_pay_type" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.jiuyue.user.widget.ScrollRefreshLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pay"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/colorFe"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/login_shape"
            android:text="立即付款"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>