<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.jiuyue.user.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_pay_status"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/ic_pay_success" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="支付成功"
        android:textColor="@color/color333"
        android:textSize="17sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pay_retry"
            android:layout_width="144dp"
            android:layout_height="37dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/stroke_1dp_fc3768_50dp"
            android:text="重新支付"
            android:textColor="#FC3768"
            android:textSize="13sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pay_back"
            android:layout_width="144dp"
            android:layout_height="37dp"
            android:background="@drawable/stroke_1dp_bbb_50dp"
            android:text="返回首页"
            android:textColor="@color/color999"
            android:textSize="13sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>