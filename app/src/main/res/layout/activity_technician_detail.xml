<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiuyue.user.widget.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_tech_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:padding="10dp"
        android:src="@drawable/selector_follow_icon"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintVertical_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tech_avatar"
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:src="@color/colorEee"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_tech_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_tech_dynamic"
                android:text="技师动态"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_marginEnd="-10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FDF8F3"
                app:layout_constraintBottom_toBottomOf="@id/iv_tech_avatar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:drawableStart="@drawable/ic_tech_fw"
                    android:drawablePadding="2dp"
                    android:text="安心服务"
                    android:textColor="#D69270"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="102dp"
                    android:drawableStart="@drawable/ic_tech_sj"
                    android:drawablePadding="2dp"
                    android:text="手机认证"
                    android:textColor="#D69270"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="182dp"
                    android:drawableStart="@drawable/ic_tech_sm"
                    android:drawablePadding="2dp"
                    android:text="实名认证"
                    android:textColor="#D69270"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_tech_avatar">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textColor="@color/color333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/selector_tech_gender"
                    android:drawableStart="@drawable/ic_gender_woman"
                    android:drawablePadding="2dp"
                    android:paddingStart="5dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="1dp"
                    android:text="01"
                    android:textColor="@color/tech_gender_color"
                    android:textSize="11sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_tech_name"
                    app:layout_constraintStart_toEndOf="@id/tv_tech_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="用户评分"
                    android:textColor="@color/color333"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/tv_tech_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_tech_name" />

                <com.jiuyue.user.widget.MarkView
                    android:id="@+id/mv_tech_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_tech_score"
                    app:layout_constraintStart_toEndOf="@id/tv_tech_score"
                    app:layout_constraintTop_toTopOf="@id/tv_tech_score" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_distince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_tech_address"
                    android:drawablePadding="4dp"
                    android:text="小于0km"
                    android:textColor="@color/color999"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单0"
                    android:textColor="@color/color999"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:paddingStart="19dp"
                android:paddingTop="12dp"
                android:paddingEnd="19dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_info">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_fw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务"
                    android:textColor="@color/color999"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_tech_service_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorPrice"
                    android:textSize="10sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_fw"
                    app:layout_constraintStart_toEndOf="@+id/tv_fw"
                    tools:text="最早可约：今15:30" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="保障"
                    android:textColor="@color/color999"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fw" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bz1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_tech_bz1"
                    android:text="爽约包赔"
                    android:textColor="@color/color333"
                    android:textSize="10sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_bz"
                    app:layout_constraintStart_toEndOf="@+id/tv_bz" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_tech_bz2"
                    android:text="不满意重服务"
                    android:textColor="@color/color333"
                    android:textSize="10sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_bz1"
                    app:layout_constraintStart_toEndOf="@+id/tv_bz1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_bz3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:drawablePadding="3dp"
                    android:drawableStart="@drawable/ic_tech_bz3"
                    android:text="全场保障"
                    android:textColor="@color/color333"
                    android:textSize="10sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_bz2"
                    app:layout_constraintStart_toEndOf="@+id/tv_bz2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:paddingStart="19dp"
                android:paddingTop="12dp"
                android:paddingEnd="19dp"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_service">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_jj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技师简介"
                    android:textColor="@color/color333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_dynamic_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_right_gray"
                    android:drawablePadding="5dp"
                    android:text="全部视频/照片"
                    android:textColor="@color/color999"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jj" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="正规绿色服务，您好，新人报道，手法、技术经过专业培训，本人性格随和，按客人要求提供专业服务，擅长全身精油spa,疫苗已打，欢迎下单体验。"
                    android:textColor="@color/color333"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_dynamic" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/cl_summary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>