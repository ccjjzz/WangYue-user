<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingTop="13dp"
    android:paddingEnd="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_iv_avatar"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:background="@color/colorEee"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="名称"
        android:textColor="@color/color333"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_iv_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="¥"
        android:textColor="@color/colorProduct"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/item_iv_avatar"
        app:layout_constraintStart_toEndOf="@+id/item_iv_avatar"
        app:layout_constraintTop_toTopOf="@id/item_iv_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="0.00"
        android:textColor="@color/colorProduct"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_p"
        app:layout_constraintStart_toEndOf="@+id/item_tv_p"
        app:layout_constraintTop_toTopOf="@id/item_tv_p" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_duration"
        android:drawablePadding="5dp"
        android:text="0分钟"
        android:textColor="@color/color3d"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/item_tv_p"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="已售0"
        android:textColor="@color/color9a"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_depict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="描述说明"
        android:textColor="@color/color9a"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/item_iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_duration" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:background="@color/colorEee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tv_depict" />
</androidx.constraintlayout.widget.ConstraintLayout>