<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/item_technician_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:src="@color/colorEee"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/item_technician_name"
            app:layout_constraintLeft_toRightOf="@+id/item_technician_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="石海英"
            android:textColor="#ff333333"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/item_technician_city"
            app:layout_constraintLeft_toRightOf="@id/item_technician_img"
            app:layout_constraintTop_toBottomOf="@id/item_technician_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:text="北京海淀"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/item_technician_city"
            app:layout_constraintLeft_toRightOf="@id/item_technician_img"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户评分"
            android:textColor="#ff9a9a9a"
            android:textSize="11sp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_service_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toRightOf="@id/item_technician_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="9dp"
            android:layout_marginTop="13dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_technician_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可服务"
            android:textColor="#ff333333"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/item_service_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="2dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>